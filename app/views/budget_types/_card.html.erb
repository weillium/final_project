<div class="card mb-3">
  <h2 class="card-header h4">
    Budget Type #<%= budget_type.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Type name</dt>
      <!-- Display type_name start -->
      <dd><%= budget_type.type_name %></dd>
      <!-- Display type_name end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back budget_type, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link budget_type start -->
      <div class="col">
        <%= link_to edit_budget_type_url(budget_type), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link budget_type end -->

      <!-- Delete link budget_type start -->
      <div class="col">
        <%= link_to budget_type, method: :delete, data: { confirm: "Do you really want to delete this budget_type?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link budget_type end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(budget_type.updated_at) %> ago
  </div>
</div>
