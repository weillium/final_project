<% was_validated = notification.errors.any? %>

<%= form_with(model: notification, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for creator_id start -->
  <div class="form-group">
    <% creator_class = "form-control" %>
    <% creator_was_invalid = notification.errors.include?(:creator) %>

    <% if was_validated %>
      <% if creator_was_invalid %>
        <% creator_class << " is-invalid" %>
      <% else %>
        <% creator_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :creator_id %>
    <!-- Input for creator_id start -->
    <%= f.number_field :creator_id, class: creator_class, placeholder: "Enter creator" %>
    <!-- Input for creator_id end -->
    <% if creator_was_invalid %>
      <% notification.errors.full_messages_for(:creator).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for creator_id end -->
  <!-- Label and input for title start -->
  <div class="form-group">
    <% title_class = "form-control" %>
    <% title_was_invalid = notification.errors.include?(:title) %>

    <% if was_validated %>
      <% if title_was_invalid %>
        <% title_class << " is-invalid" %>
      <% else %>
        <% title_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :title %>
    <!-- Input for title start -->
    <%= f.text_field :title, class: title_class, placeholder: "Enter title" %>
    <!-- Input for title end -->
    <% if title_was_invalid %>
      <% notification.errors.full_messages_for(:title).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for title end -->
  <!-- Label and input for body start -->
  <div class="form-group">
    <% body_class = "form-control" %>
    <% body_was_invalid = notification.errors.include?(:body) %>

    <% if was_validated %>
      <% if body_was_invalid %>
        <% body_class << " is-invalid" %>
      <% else %>
        <% body_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :body %>
    <!-- Input for body start -->
    <%= f.text_field :body, class: body_class, placeholder: "Enter body" %>
    <!-- Input for body end -->
    <% if body_was_invalid %>
      <% notification.errors.full_messages_for(:body).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for body end -->
  <!-- Label and input for attachment start -->
  <div class="form-group">
    <% attachment_class = "form-control" %>
    <% attachment_was_invalid = notification.errors.include?(:attachment) %>

    <% if was_validated %>
      <% if attachment_was_invalid %>
        <% attachment_class << " is-invalid" %>
      <% else %>
        <% attachment_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :attachment %>
    <!-- Input for attachment start -->
    <%= f.text_field :attachment, class: attachment_class, placeholder: "Enter attachment" %>
    <!-- Input for attachment end -->
    <% if attachment_was_invalid %>
      <% notification.errors.full_messages_for(:attachment).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for attachment end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
