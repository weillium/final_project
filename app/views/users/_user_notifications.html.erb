<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Notifications

    <a data-toggle="collapse" href="#user_notifications_new_form">
      Add notification
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.notifications.each do |notification| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to notification, notification %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_notifications_new_form">
        <%= render partial: "users/user_notifications_new_form" %>
      </div>
    </div>

  </ul>
</div>
