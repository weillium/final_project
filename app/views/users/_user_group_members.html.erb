<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Group Members

    <a data-toggle="collapse" href="#user_group_members_new_form">
      Add group member
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.group_members.each do |group_member| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to group_member, group_member %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_group_members_new_form">
        <%= render partial: "users/user_group_members_new_form" %>
      </div>
    </div>

  </ul>
</div>
