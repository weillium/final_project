<%= form_with(model: @score, local: true) do |f| %>

  <%= f.hidden_field :family_id, value: @family.id %>

  <div class="form-group">
    <%= f.label :score %>

    <%= f.text_field :score, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: "3", class: "form-control" %>
  </div>

  <%= f.submit "Create score", class: "btn btn-block btn-outline-secondary" %>
<% end %>
