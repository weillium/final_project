<% was_validated = agenda_item.errors.any? %>

<%= form_with(model: agenda_item, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% start_time_class = "form-control" %>
    <% start_time_was_invalid = agenda_item.errors.include?(:start_time) %>

    <% if was_validated %>
      <% if start_time_was_invalid %>
        <% start_time_class << " is-invalid" %>
      <% else %>
        <% start_time_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :start_time %>
    <%= f.datetime_select :start_time, class: start_time_class, placeholder: "Enter start time" %>
    <% if start_time_was_invalid %>
      <% agenda_item.errors.full_messages_for(:start_time).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% end_time_class = "form-control" %>
    <% end_time_was_invalid = agenda_item.errors.include?(:end_time) %>

    <% if was_validated %>
      <% if end_time_was_invalid %>
        <% end_time_class << " is-invalid" %>
      <% else %>
        <% end_time_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :end_time %>
    <%= f.datetime_select :end_time, class: end_time_class, placeholder: "Enter end time" %>
    <% if end_time_was_invalid %>
      <% agenda_item.errors.full_messages_for(:end_time).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% location_class = "form-control" %>
    <% location_was_invalid = agenda_item.errors.include?(:location) %>

    <% if was_validated %>
      <% if location_was_invalid %>
        <% location_class << " is-invalid" %>
      <% else %>
        <% location_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :location %>
    <%= f.text_field :location, class: location_class, placeholder: "Enter location" %>
    <% if location_was_invalid %>
      <% agenda_item.errors.full_messages_for(:location).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% activity_name_class = "form-control" %>
    <% activity_name_was_invalid = agenda_item.errors.include?(:activity_name) %>

    <% if was_validated %>
      <% if activity_name_was_invalid %>
        <% activity_name_class << " is-invalid" %>
      <% else %>
        <% activity_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :activity_name %>
    <%= f.text_field :activity_name, class: activity_name_class, placeholder: "Enter activity name" %>
    <% if activity_name_was_invalid %>
      <% agenda_item.errors.full_messages_for(:activity_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% description_class = "form-control" %>
    <% description_was_invalid = agenda_item.errors.include?(:description) %>

    <% if was_validated %>
      <% if description_was_invalid %>
        <% description_class << " is-invalid" %>
      <% else %>
        <% description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :description %>
    <%= f.text_area :description, class: description_class, placeholder: "Enter description" %>
    <% if description_was_invalid %>
      <% agenda_item.errors.full_messages_for(:description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% photo_class = "form-control" %>
    <% photo_was_invalid = agenda_item.errors.include?(:photo) %>

    <% if was_validated %>
      <% if photo_was_invalid %>
        <% photo_class << " is-invalid" %>
      <% else %>
        <% photo_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :photo %>
    <%= f.file_field :photo, class: "form-control" %>
    <% if photo_was_invalid %>
      <% agenda_item.errors.full_messages_for(:photo).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% leader_class = "form-control" %>
    <% leader_was_invalid = agenda_item.errors.include?(:leader) %>

    <% if was_validated %>
      <% if leader_was_invalid %>
        <% leader_class << " is-invalid" %>
      <% else %>
        <% leader_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :leader_id %>
    <%= f.collection_select :leader_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <% if leader_was_invalid %>
      <% agenda_item.errors.full_messages_for(:leader).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-check">
    <% is_cyoa_class = "form-check-input" %>
    <% is_cyoa_was_invalid = agenda_item.errors.include?(:is_cyoa) %>

    <% if was_validated %>
      <% if is_cyoa_was_invalid %>
        <% is_cyoa_class << " is-invalid" %>
      <% else %>
        <% is_cyoa_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :is_cyoa, class: "form-check-label" do %>
      <%= f.check_box :is_cyoa, class: is_cyoa_class %> Is cyoa
    <% end %>
    <% if is_cyoa_was_invalid %>
      <% agenda_item.errors.full_messages_for(:is_cyoa).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% budget_line_class = "form-control" %>
    <% budget_line_was_invalid = agenda_item.errors.include?(:budget_line) %>

    <% if was_validated %>
      <% if budget_line_was_invalid %>
        <% budget_line_class << " is-invalid" %>
      <% else %>
        <% budget_line_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :budget_line_id %>
    <%= f.collection_select :budget_line_id, BudgetLine.all, :id, :to_s, {}, class: "form-control" %>
    <% if budget_line_was_invalid %>
      <% agenda_item.errors.full_messages_for(:budget_line).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
